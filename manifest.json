{
  "manifest_version": 2,
  "name": "Torn Foreign Stock Predictor",
  "version": "2.0",
  "description": "Displays projected foreign stock restocks based on YATA API data.",
  "permissions": [
    "storage",
    "https://yata.yt/*",
    "https://www.torn.com/*"
  ],
  "background": {
    "scripts": [
      "tornstocklogger.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.torn.com/*"
      ],
      "js": []
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "0xxzerocoolxx0@gmail.com"
    }
  }
}